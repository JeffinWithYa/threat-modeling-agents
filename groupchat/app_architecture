// App Architecture
digraph {
	A [label=User]
	B [label="Amazon Cognito"]
	C [label="Amazon S3"]
	D [label=DynamoDB]
	E [label="AWS Lambda"]
	F [label=GameLift]
	G [label=AppSync]
	H [label="AWS Analytics"]
	I [label="Amazon Pinpoint"]
	A -> B [label="Logs in/Registers"]
	B -> C [label="Fetches game assets"]
	A -> D [label="Updates game state"]
	D -> E [label="Triggers Lambda functions"]
	A -> F [label="Participates in multiplayer events"]
	A -> G [label="Syncs offline plays"]
	A -> H [label="Sends game interactions"]
	A -> I [label="Receives push notifications"]
}
